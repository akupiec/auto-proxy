{
  "env": {
		"es6": true,
		"node": true,
		"jest": true
  },
  "extends": "eslint:recommended",
  "rules": {
	"indent": ["error", 4, { "SwitchCase": 1 }],
	"linebreak-style": ["error", "unix"],
	"quotes": ["error", "single"],
	"semi": ["error", "always"],
	"comma-dangle": ["error", "always-multiline"],
	"no-cond-assign": ["error", "always"],
	"no-var": ["error"],
	"no-trailing-spaces": ["error"]
  }
}
